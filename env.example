# === НАСТРОЙКИ TELEGRAM БОТА ===
BOT_TOKEN=1234567890:ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890
GROUP_ID=-1001234567890
ADMIN_IDS=123456789,987654321

# === НАСТРОЙКИ БАЗЫ ДАННЫХ ===
DATABASE_URL=sqlite+aiosqlite:///data/shop.db

# === НАСТРОЙКИ ЛОГИРОВАНИЯ ===
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# === НАСТРОЙКИ ОКРУЖЕНИЯ ===
ENVIRONMENT=development
DEBUG=True

# === ИНСТРУКЦИИ ДЛЯ НАСТРОЙКИ ===
# 1. Скопируйте этот файл в .env
# 2. Замените BOT_TOKEN на реальный токен от @BotFather
# 3. Замените GROUP_ID на ID вашей группы (получите через @userinfobot)
# 4. Замените ADMIN_IDS на реальные ID администраторов
# 5. Для продакшена установите ENVIRONMENT=production и DEBUG=False 